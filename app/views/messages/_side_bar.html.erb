<div class="side_bar_header">
  <div class="name">
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="chat_create"><%= link_to "チャットを作成する", new_room_path %></div>
</div>

<div class="chat_list_corner">
  <% current_user.rooms.each do |room| %>
    <ul class="chat_list">
      <li class="chat_name">
        <a href="#"><%= room.name %></a>
      </li>
    </ul>
  <% end %>
</div>