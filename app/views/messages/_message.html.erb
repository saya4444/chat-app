<div class="chat">

  <div class="chat_info">
    <div class="chat_user">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
    </div>
    <div class="chat_date">
      <!-- 投稿した時刻を出力する -->
      <%= l message.created_at %>
    </div>
  </div>

  <div class="chat_text">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
  </div>

</div>